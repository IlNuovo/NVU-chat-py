from cryptography.fernet import Fernet


class Structurer:

    def __init__(Self):
        Self.key = Fernet.generate_key()
        Self.cipher_suite = Fernet(Self.key)

    def build (Self, ip = 'localhost', message = '', keepalive = True, encripted = True):
        final = ""

        final += f"from : {ip},"
        final += f"msg : {message},"
        final += f"keepalive : {keepalive}"

        if encripted:
            final = Self.cipher_suite.encrypt(final.encode('utf-8'))
        
        return final
    
    def unpack (Self, cipher_text):
        plain_text = Self.cipher_suite.decrypt(cipher_text)
        return plain_text
    
    def setKey (Self, key):
        Self.key = key
        Self.cipher_suite = Fernet(Self.key)
